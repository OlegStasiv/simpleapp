<br>
<%= form_for current_user, html: { multipart: true } do |form| %>
    <%= image_tag current_user.avatar.url(:med) %>
    <br>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <br>
    <%= form.label :email %>
    <%= form.text_field :email %>
    <br>
    <%= form.file_field :avatar %>
    <br><%= form.submit "Save"%>

<% end %>