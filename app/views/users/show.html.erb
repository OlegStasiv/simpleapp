<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <br><%= gravatar_for @user %>
        <br><%= @user.name %>
          <br><b><h1>Friends list</h1></b>
          <% @user.friendships.each do |friendship| %><br />
              <%= friendship.friend.name %>
              <%= link_to "remove", friendships_destroy_url, method: :delete %>
          <%end%>
      </h1>
      <br><b><h1>Friended by users</h1></b>
      <ul>
        <br><% for user in @user.inverse_friends %>
            <li><%=h user.name %></li>
            <%= link_to "remove", friendships_destroy_url, :method => :delete %>
        <% end %>
      </ul>

    </section>
  </aside>
</div>